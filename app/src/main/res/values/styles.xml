<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="main_recycler_item_picture_style">
        <item name="android:layout_width">@dimen/_0</item>
        <item name="android:layout_height">@dimen/main_recycler_item_picture_height</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:src">@drawable/default_pizza_for_example</item>
        <item name="android:padding">@dimen/main_recycler_item_picture_padding</item>
        <item name="layout_constraintHorizontal_weight">5</item>
    </style>
    <style name="main_recycler_item_title_style">
        <item name="android:layout_width">@dimen/_0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/example_text_title</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/main_recycler_item_title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="layout_constraintHorizontal_weight">7</item>
    </style>
    <style name="main_recycler_item_description_style">
        <item name="android:layout_width">@dimen/_0</item>
        <item name="android:layout_height">@dimen/_0</item>
        <item name="android:text">@string/example_text_description</item>
        <item name="android:textSize">@dimen/main_recycler_item_description_text_size</item>
        <item name="android:layout_marginTop">@dimen/main_recycler_item_description_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/main_recycler_item_description_margin_bottom</item>
        <item name="layout_constraintHorizontal_weight">7</item>
    </style>
    <style name="main_recycler_item_buy_button_style" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/example_text_buy_button</item>
        <item name="android:layout_marginEnd">@dimen/main_recycler_item_buy_button_margin_end</item>
        <item name="strokeColor">@color/main_recycler_item_buy_button_color</item>
        <item name="android:textColor">@color/main_recycler_item_buy_button_color</item>
        <item name="cornerRadius">@string/main_recycler_item_buy_button_corner_radius</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>